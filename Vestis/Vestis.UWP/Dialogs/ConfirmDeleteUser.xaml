<ContentDialog
    x:Class="Vestis.UWP.Dialogs.ConfirmDeleteUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Vestis.UWP.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Background="#AA0000">

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock FontSize="30"
                       x:Uid="DeleteUserDlgTblHeader"
                       Text="[ConfirmDeleteUserHeader]"
                       Margin="4"/>
            <TextBlock x:Uid="DeleteUserDlgTblBody"
                       Text="[ConfirmDeleteUserBody]"
                       TextWrapping="WrapWholeWords"
                       Margin="4"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Background="#283038"
                        x:Uid="DeleteUserDlgBtnYes"
                        Click="RestoreDlgBtnYes_Click"
                        Content="[BtnYes]"/>
                <Button Background="#283038"
                        x:Uid="DeleteUserDlgBtnNo"
                        Click="RestoreDlgBtnNo_Click"
                        Content="[BtnNo]"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</ContentDialog>
